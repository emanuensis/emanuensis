	imgmovieDivId=document.getElementById('imgmovieDiv');
	y=document.getElementById("thms");
	if(null==y)return;
	thmsid=y;
	aij=month;
dirs1=[];	dirs2=[];	//copies for selection...
for(i=0;i<dirs.length;i++){dirs1.push(dirs[i]);}
for(i=0;i<dirs.length;i++){
	mnth=monthv(dirs[i]);
	if(mnth!=month){
		month=mnth;
		aij+="<br />"+month+" ";	}
	aij+="<b class='directory'"
		+" id='d"+dirs[i]+"'"
		+" style='color:blue'"
		+" onclick='webdir("+i+")'>"+dirs[i]+"</b>"
		+"<b id='q"+dirs[i]+"'"+eoff
		+"<div id='t"+dirs[i]+"'>";
	for(j=0; j<imgs[dirs[i]].length; j++){
		var nij=imgs[dirs[i]][j];
		aij+='<img id="t'+nij
			+'" title="t'+nij
			+'" class="thm"'
			+'" height="'+thmsz
			+'" active="false"'
			+' onClick="webit(this)" src="'
			+dirs[i]+'/thm/'
			+nij	+'">';
		}
	aij+="</div>";
}
y.innerHTML=aij;
allonoff(dirs);
foo();
}
function webdir(diri){
	diri=dirs[diri];
	for(j=0; j<imgs[diri].length; j++) {
		var tij=imgs[diri][j];
		tij=document.getElementById('t'+tij);
		if(null==tij)return;
		webit(tij);
}	}
